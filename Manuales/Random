ALTER ROLE gysmo_cc WITH PASSWORD 'P@ssw0rd';
create role actl_gysmo_cc;
create role cons_gysmo_cc;
CREATE DATABASE gysmo WITH OWNER = gysmo_cc;
ALTER DATABASE gysmo SET search_path=gysmo_cc,public,"$user";
